<%- if controller_name != 'sessions' %>
  <span>Έχετε ήδη λογαριασμό; <%= link_to "Είσοδος", new_session_path(resource_name), class: "text-decoration-none fw-bold" %></span><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <span>Δεν έχετε λογαριασμό; <%= link_to "Εγγραφή", new_registration_path(resource_name), class: "text-decoration-none fw-bold" %></span><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Ξεχάσατε τον κωδικό σας;", new_password_path(resource_name), class: "text-muted text-decoration-none d-block mt-2" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Δεν λάβατε οδηγίες επιβεβαίωσης;", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Δεν λάβατε οδηγίες ξεκλειδώματος;", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Είσοδος με #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-outline-dark w-100 mt-2 rounded-pill" %>
  <% end %>
<% end %>