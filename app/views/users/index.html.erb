<h1 class="mb-4">Χρήστες του Portal</h1>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-4 mb-3">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h5 class="card-title"><%= user.email %></h5>
          
          <% if current_user.friends.include?(user) %>
            <span class="badge bg-success">Επαφή προστέθηκε</span>
          <% else %>
            <%= button_to "Προσθήκη στις επαφές", add_friend_user_path(user), method: :post, class: "btn btn-primary btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<hr class="my-5">

<h2>Οι Επαφές μου</h2>
<ul class="list-group col-md-6">
  <% current_user.friends.each do |friend| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= friend.email %>
      <span class="badge bg-info text-dark">Online</span>
    </li>
  <% end %>
</ul>